{
    "compilerOptions": {
      "allowJs": true,
      "allowSyntheticDefaultImports": true,
      "jsx": "preserve",
      "lib": ["es2018"],
      "moduleResolution": "node",
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "preserveConstEnums": true,
      "removeComments": false,
      "skipLibCheck": true,
      "sourceMap": false,
      "strict": true,
      "noImplicitAny": true,
      "target": "esnext",
      "types": ["node"],
      "module": "commonjs",
      "outDir": "build/",
      "noEmit": false
    },
    "include": ["src/**/*"]
  }
  